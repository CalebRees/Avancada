@model IEnumerable<Avancada.Models.Refeicao>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Principal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Salada)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bebida)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sobremesa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vegetariana)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
