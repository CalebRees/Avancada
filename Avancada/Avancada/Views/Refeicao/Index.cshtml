    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Principal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Salada)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Bebida)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sobremesa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Vegetariana)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Dia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Usuario.Nome)
        </td>
        <td>
            @Html.ActionLink("Editar", "Alterar", new { id=item.IdRefeicao }) |
            @Html.ActionLink("Deletar", "Excluir", new { id=item.IdRefeicao })
